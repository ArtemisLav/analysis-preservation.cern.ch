{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Deposit schema.",
  "description": "Describe information needed for deposit module.",
  "properties": {
    "basic_info": {
      "type": "object",
      "properties": {
        "anal_name": {
          "type": "string",
          "title": "Analysis Name"
        }
      }
    },
    "$schema": {
      "type": "string"
    },
    "_deposit": {
      "type": "object",
      "name": "_deposit",
      "properties": {
        "id": {
          "type": "integer",
          "name": "id"
        },
        "pid": {
          "type": "object",
          "name": "pid",
          "properties": {
            "revision_id": {
              "type": "integer"
            },
            "type": {
              "type": "string"
            },
            "value": {
              "type": "string"
            }
          }
        },
        "created_by": {
          "type": "integer",
          "name": "created_by"
        },
        "owners": {
          "type": "array",
          "name": "owners",
          "items": [
            {
              "type": "integer"
            }
          ]
        },
        "status": {
          "type": "string",
          "name": "status",
          "enum": [
            "draft",
            "published"
          ]
        }
      },
      "required": [
        "id"
      ]
    },
   "_files": {
      "items": {
        "type": "object",
        "description": "Describe information needed for files in records.",
        "properties": {
          "checksum": {
            "type": "string"
          },
          "bucket": {
            "type": "string"
          },
          "version_id": {
            "type": "string"
          },
          "key": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "description": "File type extension."
          },
          "size": {
            "type": "integer"
          }
        }
      },
      "type": "array"
    },
    "_buckets": {
      "type": "object",
      "properties": {
        "record": {
          "type": "string",
          "description": "Record bucket ID."
        },
        "deposit": {
          "type": "string",
          "description": "Deposit bucket ID."
        }
      }
    }
  },
  "required": [
    "_deposit"
  ]
}