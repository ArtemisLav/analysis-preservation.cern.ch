{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Deposit schema.",
  "description": "Describe information needed for deposit module.",
  "properties": {
    "basic_info": {
      "type": "object",
      "properties": {
        "anal_name": {
          "type": "string",
          "title": "Analysis Name"
        }
      }
    },
    "_files": {
      "items": {
        "type": "object",
        "description": "Describe information needed for files in records.",
        "properties": {
          "checksum": {
            "type": "string"
          },
          "bucket": {
            "type": "string"
          },
          "version_id": {
            "type": "string"
          },
          "key": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "description": "File type extension."
          },
          "size": {
            "type": "integer"
          }
        }
      },
      "type": "array"
    },
    "_buckets": {
      "type": "object",
      "properties": {
        "record": {
          "type": "string",
          "description": "Record bucket ID."
        },
        "deposit": {
          "type": "string",
          "description": "Deposit bucket ID."
        }
      }
    }
  }
}