{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Inputs",
  "id": "yadage_stage",
  "additionalProperties": false,
  "properties": {
    "data_inputfiles": {
      "type": "array",
      "title": "Data Input Files",
      "items": {
        "type": "string"
      }
    },
    "signal_mcweight": {
      "type": "number",
      "title": "Signal MC Weight"
    },
    "signal_inputfiles": {
      "type": "array",
      "title": "Signal Input Files",
      "items": {
        "type": "string"
      }
    },
    "bkg_mcinfo": {
      "type": "array",
      "title": "Background MC Info",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "weight": {
            "type": "number"
          },
          "inputfiles": {
            "type": "array",
            "title": "Background Input Files",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
